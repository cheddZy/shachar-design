---
import Shots_Temp from "../images/209shots_so.png";
import { Image } from "astro:assets";

const {src, alt, ariaDesc, date} = Astro.props;

import '../globals.scss';
import '../styles.scss';
import '../themes.scss';

---


<li class="contentPhoto">
    <div class="photoContainer">

            <Image src={src}
                   width='1000'
                   height='1000'
                   alt={alt}
                   aria-description={ariaDesc}
                   aria-label="design"
                   loading="eager"
            />

        <div class="photoContext">
            <small class="">{date}</small>
        </div>
    </div>
</li>


<style>

    .contentPhoto {
        width: 100%;
        flex-direction: column;
        position: relative;
        gap: 0.25rem;
        overflow: clip;
        border: solid 1px var(--snoopingAroundAreWe);
        @apply rounded-md;
    }

    .photoContext {
        width: 100%;
        height: 32px;
        position: absolute;
        bottom: 8px;
        padding: 1rem;
        white-space: nowrap;
        z-index: 1;
        color: #f1f1f1;

        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }

    .photoContainer {
        aspect-ratio: 9/16;
        overflow: clip;
    }

    .photoContainer::after {
        content: "";
        background: linear-gradient(to top, rgba(0, 0, 0, 1), transparent);
        position: absolute;
        width: 100%;
        height: 100px;
        bottom: -12px;
    }

    img {
        image-rendering: optimizeQuality;
        @apply transition-all;
        display: block;
        transition-duration: 500ms;
        width: auto;
        min-height: 100%;
        min-width: 100%;
        object-fit: cover;
    }

    small {
        font-weight: 500;
    }

    div:has(img) {
        overflow: hidden;

    }

</style>