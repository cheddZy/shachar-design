---
import '../globals.scss';
import '../styles.scss';
import '../themes.scss';
import ContentCard from "./ContentCard.astro";
---


<div id="contentContainer">
    <section id="cards">
        <ContentCard alt="Alt text!"
                     src='/images/207shots_so.png'
                     underLabel="TFConnect Website"
                     description="UIUX, Web Design"
                     href=https://www.tfconnect.org
        />
        <ContentCard alt="Alt text!"
                     src='/images/209shots_so.png'
                     underLabel="Amper Software - TF:S2"
                     description="Game UI Design, Brand Design"
                     href=https://twitter.com/TeamFortressS2
        />
        <ContentCard alt="Alt text!"
                     src='/images/208shots_so.png'
                     underLabel="NIN - Pretty Hate Machine (Assignment)"
                     description="Composition"
                     href=https://twitter.com/TeamFortressS2
        />
        <ContentCard alt="Alt text!"
                     src='/images/200shots_temp.png'
                     underLabel="Temporary Work Collection"
                     description="Other, Behance"
                     href=https://www.behance.net/gallery/191861431/TEMPORARY-Workfolio
        />


    </section>
</div>

<style>

    section {
        width: 100%;
        height: fit-content;
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr 1fr;
        gap: 0.5rem 0.5rem;
        grid-template-areas:
    ". . "
    ". .";

    }

    @media screen and (max-width: 768px) {
        section {
            display: flex;
            gap: 0.5rem;
            flex-direction: column;
        }
    }


</style>