import { Image } from "astro:assets";

---

<script>
    const winPrint = document.getElementById('windowSize');
    let windowHeight = window.innerHeight,
        windowWidth = window.innerWidth;

    function updateWindowSize() {
        winPrint.innerHTML = windowWidth + 'x' + windowHeight;
    }
    // Executes
    setInterval(function() {

            windowHeight = window.innerHeight;
            windowWidth = window.innerWidth;
            updateWindowSize();
        },
        10)

    // TODO: Clock
    const clockTime = document.getElementById('clockTime');
    function currentTime() {
        let date = new Date();

        let hour = date.getHours(),
            min = date.getMinutes(),
            sec = date.getSeconds(),

            midday = (hour >= 12) ? "PM" : "AM";
            hour = (hour == 0) ? 12 : ((hour > 12) ? (hour - 12): hour);
            hour = fixTime(hour);
            min = fixTime(min);
            sec = fixTime(sec);

        clockTime.innerText = hour + ":" + min + ":" + sec + " " + midday;
    }

    function fixTime(set) {
        if (set < 10) {
            return "0" + set;
        }
        else {
            return set;
        }
    }

    currentTime();

</script>


<div id="heroContainer">
    <section>
        <div class="heroLeft">
            <h2>
                Detail-oriented UI Designer focused on responsive &&
                <br> user-centered products.
            </h2>
            <div id="workStatus">
                <div id="workLit"></div>
                <p>Open for work</p>
            </div>
        </div>
        <div class="heroRight">
            <small id="clockTime"></small>
            <small id="windowSize"></small>
        </div>
    </section>
</div>

<style>
    button {
        margin-top: 3rem;
    }
    button a {
        @apply px-4;
        @apply py-2;

        border-radius: 0.5rem;

        font-weight: 600;

        background-color: var(--text);
        color: var(--bg);

        font-size: var(--h6);

    }
    #heroContainer {
        padding: 4rem 1rem 1rem 1rem;
    }

    h2 {
        font-weight: 500;
    }
    small {
        font-family: "Geist Mono Variable", monospace;
    }
    #workLit {
        background-color: #39cc68;
        width: 1rem;
        height: 1rem;
        border-radius: 1rem;
    }

    #workStatus {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-top: 1rem;
    }

    section {
        border-radius: 0 0 2rem 2rem;
        padding: 4rem;
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: flex-end;
        height: 90vh;
        background: linear-gradient(180deg, var(--bg), var(--bg-secondary));

        box-sizing: border-box;
    }
    .heroLeft {
        width: auto;


    }
    .heroRight {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: flex-end;
        width: 12rem;
        gap: 1rem;
        height: 100%;

    }

    div img {
        border-radius: 0.25rem;
    }
    #heroContainer {
        border-bottom: dotted 1px var(--secondary);
    }



    @media screen and (max-width: 768px) {
        h2 {
            font-size: var(--h4) !important;
        }
        .headerContent {
            display: none;
        }
        section {
            flex-direction: column-reverse;
            justify-content: space-between;
            align-items: center;
            border-radius: 0 0 1rem 1rem;
            padding: 2rem;
        }
        .heroRight {
            justify-content: flex-start;
            align-items: center;
        }
    }


</style>