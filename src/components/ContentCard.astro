---
import '../globals.scss';
import '../styles.scss';
import '../themes.scss';
import { Image } from 'astro:assets';

const {href, src, alt, ariaDesc, underLabel, description} = Astro.props;
---

<a href={href} target="_blank" class="contentCard group">
    <div><Image src={src}
           width='1000'
           height='1000'
           alt={alt}
           aria-description={ariaDesc}
           aria-label="design"/>
    </div>
    <h6 class="transition-opacity duration-200 labelCard opacity-85 group group-hover:opacity-100">{underLabel}</h6>
    <p class="transition-opacity duration-200 descCard opacity-85 group group-hover:opacity-100">{description}</p>
</a>


<style>

    .contentCard {
        width: 100%;
        //border: solid $text 1px;
        aspect-ratio: 16/9;
        justify-content: center;
        align-items: flex-start;
        display: flex;
        flex-direction: column;
        position: relative;
        gap: 0.25rem;
    }

    img {
        image-rendering: optimizeQuality;
        @apply transition-all;
        display: block;
        filter: saturate(66%);
        transition-duration: 500ms;
        width: auto;
        object-fit: contain;
    }
    .descCard {
        font-size: 0.8rem !important;
        font-family: "Geist Mono Variable", monospace;
        font-weight: normal;
        border: solid 1px var(--accent);
        background-color: var(--accent);
        color: var(--bg);
        @apply px-2;
        @apply py-[0.2rem];
        @apply rounded-xl;

    }
    .contentCard:hover .labelCard::after {
        content:'-->';
        opacity: 1;
        transform: translateX(25%);

    }
    .labelCard::after {
        content:'-->';
        opacity: 0;
        position: absolute;
        transform: translateX(-100%);
        @apply transition-all
    }

    img:hover {
        filter: saturate(100%);
        scale: 1.02;
    }

    div:has(img) {
        overflow:hidden;
        border: solid 1px var(--secondary);
        @apply rounded-md;
        @apply transition-shadow;
    }
    div:has(img):hover {
        box-shadow: 1px 16px 63px 1px rgba(100, 76, 196, 0.25);
        //-webkit-box-shadow: 1px 16px 63px 1px rgba(142,118,237,0.25);
        //-moz-box-shadow: 1px 16px 63px 1px rgba(142,118,237,0.25);
    }

</style>