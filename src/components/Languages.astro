---
import '../globals.scss';
import '../styles.scss';
import '../themes.scss';
---



    <button id="languageSwitch">
        <a id="l-214">b</a>
        <a id="c-213">a</a>
    </button>

<style>

    #languageSwitch:hover {
        border: solid 1px rgba(9, 9, 10, 1);
        background-color: rgba(9, 9, 10, 1);
        color: white;
    }

    .dark #languageSwitch:hover {
        border: solid 1px rgb(255, 255, 255);
        background-color: rgb(255, 255, 255);
        color: rgba(9, 9, 10, 1);
    }


    #languageSwitch {
        @apply px-2;
        @apply py-1;
        @apply rounded-md;
        @apply transition-all;
        @apply duration-200;

        display: flex;
        gap: 0.2rem;

        border: solid transparent 1px;
        color: rgba(0, 0, 0, 0.75)
    }
    /*The Chevron Icon*/
    #c-213 {
        scale: 0.7;
    }
    /*The Language Icon*/
    #l-214 {
        scale: 0.85;
    }


</style>